<% if(locals.searchOptions == null) {
    locals.searchOptions = {}
    locals.searchOptions.name = ""
} %>
<h2>Search Authors</h2>
<form action="/authors" method="GET">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="<%= searchOptions.name %>"/>
    <button type="submit">Search</button>
</form>
<br>
<br>
<% authors.forEach(author => { %>
    <div><%= author.name %> </div>
    <a href="/authors/<%= author.id %>">View</a>
    <a href="/authors/<%= author.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm.ejs',
              { url: `/authors/${author.id}` }) %>
<% }) %>